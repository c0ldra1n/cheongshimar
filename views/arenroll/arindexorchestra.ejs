<% include ../parts/head %>
<% include ../parts/othernav %>

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">AR 오케스트라 신청현황</h1>
        </div>
        <!-- /.col-lg-12 선야 신청현황이 기본index임!!-->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">

          <h3>오케스트라 신청현황</h3>
          <table id="enrolltable" class="table table-striped table-bordered display" cellspacing="0" width="100%">
           <thead>
            <tr>
              <th class="current">신청시간</th>
              <th class="arorop">분류</th>
              <th class="room">호실</th>
              <th class="purpose">이용목적</th>
              <th class="name">신청자</th>
              <th class="sort">계열</th>
              <th class="sex">성별</th>
              <th class="currentgrade">학년</th>
            </tr>
           </thead>

           <tbody>
            <% if(arenroll == null || arenroll.length == 0){ %>
             <tr>
              <td class="noData" colspan=100> 앗, 아무도 신청하지 않았네요! </td>
             </tr>
            <% } %>

            <% arenroll.forEach(function(arenroll) { %>
             <tr>
              <td class="current">
                 <div><%= arenroll.arorchestracurrent %></div>
              </td>
              <td class="arorop">
                <div><%= arenroll.orchestra %></div>
              </td>
              <td class="room">
               <div><%= arenroll.arorchestraroom %></div>
              </td>
              <td class="purpose">
               <div><%= arenroll.arorchestrapurpose %></div>
              </td>
              <td class="name">
                <a href="/arenroll/<%= arenroll._id %>"><div><%= arenroll.arorchestraname %></div></a>
              </td>
              <td class="sort">
               <div><%= arenroll.arorchestrasort %></div>
              </td>
              <td class="sex">
               <div><%= arenroll.arorchestrasex %></div>
              </td>
              <td class="currentgrade">
               <div><%= arenroll.arorchestracurrentgrade %></div>
              </td>
            <% }) %>

           </tbody>
          </table>

          <br><br>
        </div>
        <!-- /.col-lg-12 -->
    </div>

</div>
<!-- /#page-wrapper -->

<% include ../parts/footer %>
