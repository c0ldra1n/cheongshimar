<% include ../parts/head %>
<% include ../parts/othernav %>

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">관리자 - 선야 신청현황</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">

          <table id="hiddentable" class="table table-striped table-bordered" cellspacing="0" width="100%">
           <thead>
            <tr>
             <th class="arorop">신청시간</th>
             <th class="room">분류</th>
             <th class="sort">신청자</th>
             <th class="sex">계열</th>
             <th class="currentgrade">성별</th>
             <th class="currentclass">학년</th>
            </tr>
           </thead>

           <tbody>
            <% if(openroll == null || openroll.length == 0){ %>
             <tr>
              <td class="noData" colspan=100> 앗, 아무도 신청하지 않았네요! </td>
             </tr>
            <% } %>

            <% openroll.forEach(function(openroll) { %>
             <tr>
              <td class="current">
                 <%= openroll.opcurrent %>
              </td>
              <td class="oporop">
                <div><%= openroll.opop %></div>
              </td>
              <td class="name">
               <a href="/kingofcsia@op/<%= openroll._id %>"><div><%= openroll.opname %></div></a>
              </td>
              <td class="sort">
               <div><%= openroll.opsort %></div>
              </td>
              <td class="sex">
               <div><%= openroll.opsex %></div>
              </td>
              <td class="currentgrade">
               <div><%= openroll.opcurrentgrade %></div>
              </td>
             </tr>
            <% }) %>

           </tbody>
          </table>

        </div>
        <!-- /.col-lg-12 -->
    </div>

</div>
<!-- /#page-wrapper -->

<% include ../parts/footerwithout %>