<% include ../parts/head %>
<% include ../parts/othernav %>

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">선택야자 신청</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">

          <div class="panel-body">

              <form role="form" action="/openroll" method="post">
                  <fieldset>

                    <body onload="realtimeClockop()">
                    * 신청 시간
                      <div class="form-group">
                          <input class="form-control" value="" placeholder="" id="opcurrent" name="opcurrent" type="text" readonly>
                          -> 신청할 때 시간!!!!!!!!! 반드시 확인 부탁드립니다.<br>
                          -> 오후 5시 00분 ~ 오후 9시 50분 사이에만 신청 가능합니다.
                      </div>
                    </body>

                    * 분류
                      <div class="form-group">
                          <input class="form-control" placeholder="" id="opop" name="opop" value="선야" type="text" readonly>
                      </div>

                    * 이름
                    <div class="form-group">
                        <input class="form-control" placeholder="반드시 생기부에 입력된 이름이랑 같아야 합니다." type="text" id="opname" name="opname">
                    </div>

                    * 계열
                    <div class="form-group">
                      <select class="form-control" type="text" id="opsort" name="opsort">
                        <option>국내</option>
                        <option>국제</option>
                      </select>
                    </div>

                    * 성별
                    <div class="form-group">
                      <select class="form-control" type="text" id="opsex" name="opsex">
                        <option>남자</option>
                        <option>여자</option>
                      </select>
                    </div>

                    * 학년
                    <div class="form-group">
                      <select class="form-control" type="text" id="opcurrentgrade" name="opcurrentgrade">
                        <option>1</option>
                        <option>2</option>
                        <option>3</option>
                      </select>
                    </div>

                    * 수정&삭제를 위한 비밀번호
                    <div class="form-group">
                        <input class="form-control" placeholder="숫자 4자리로 구성된 비밀번호를 입력해주세요." type="text" id="oppassword" name="oppassword">
                    </div>

                    <br>
                  </fieldset>

<% include ../parts/footer %>