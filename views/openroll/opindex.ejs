<% include ../parts/head %>
<% include ../parts/othernav %>

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">선택야자 신청현황</h1>
        </div>
        <!-- /.col-lg-12 선야 신청현황이 기본index임!!-->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">

          <table id="enrolltable" class="table table-striped table-bordered" cellspacing="0" width="100%">
           <thead>
            <tr>
              <th class="current">신청시간</th>
              <th class="arorop">분류</th>
              <th class="name">신청자</th>
              <th class="sort">계열</th>
              <th class="sex">성별</th>
              <th class="currentgrade">학년</th>
            </tr>
           </thead>

           <tbody>
            <% if(openroll == null || openroll.length == 0){ %>
             <tr>
              <td class="noData" colspan=100> 앗, 아무도 신청하지 않았네요! </td>
             </tr>
            <% } %>

            <% openroll.forEach(function(openroll) { %>
             <tr>
              <td class="current">
              <div><%= openroll.opcurrent %></div>
              </td>
              <td class="arorop">
                <div><%= openroll.opop %></div>
              </td>
              <td class="name">
                <div><%= openroll.opname %></div>
              </td>
              <td class="sort">
               <div><%= openroll.opsort %></div>
              </td>
              <td class="sex">
               <div><%= openroll.opsex %></div>
              </td>
              <td class="currentgrade">
               <div><%= openroll.opcurrentgrade %></div>
              </td>
             </tr>
            <% }) %>

           </tbody>
          </table>

        </div>
        <!-- /.col-lg-12 -->
    </div>

</div>
<!-- /#page-wrapper -->

<% include ../parts/footer %>
