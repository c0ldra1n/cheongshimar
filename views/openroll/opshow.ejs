<% include ../parts/head %>
<% include ../parts/othernav %>

<script type="text/javascript">
    function deleteff() {
        var pwpw = "<%= openroll.oppassword %>";
        var psswd = prompt("비밀번호 입력", "");
        if (psswd == pwpw) {
          confirm('정말로 삭제하시겠습니까?')?document.getElementById("deleteform").submit():null;
        } else {
          alert("비밀번호가 다릅니다!");
        };
      };
</script>

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header"> 선야 신청현황 보기 </h1>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">        
            <h3 id="showshow">
                <div>신청시각 : <%= openroll.opcurrent %></div>                
                <div>분류 : <%= openroll.opop %></div>
                <div>신청자 : <%= openroll.opname %></div>
                <div>계열 : <%= openroll.opsort %></div>
                <div>성별 : <%= openroll.opsex %></div>
                <div>학년 : <%= openroll.opcurrentgrade %></div>
            </h3>
            
            <div id="backsubmitbtn">
                <form action="/openroll/<%= openroll._id %>?_method=delete" id="deleteform" method="post">
                <a class="btn btn-danger" onclick="deleteff()">삭제</a>
                </form>
                <a class="btn btn-default" href="/openroll">뒤로가기</a>
            </div>

                <br><br>
            </div>
    </div>
</div>

