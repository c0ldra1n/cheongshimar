<% include ../parts/head %>
<% include ../parts/othernav %>

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">관리자 - AR 신청현황</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">

          <table id="hiddentable" class="table table-striped table-bordered" cellspacing="0" width="100%">
           <thead>
            <tr>
             <th class="arorop">신청시간</th>
             <th class="room">분류</th>
             <th class="purpose">세미나실</th>
             <th class="name">이용목적</th>
             <th class="sort">신청자</th>
             <th class="sex">계열</th>
             <th class="currentgrade">성별</th>
             <th class="currentclass">학년</th>
            </tr>
           </thead>

           <tbody>
            <% if(arenroll == null || arenroll.length == 0){ %>
             <tr>
              <td class="noData" colspan=100> 앗, 아무도 신청하지 않았네요! </td>
             </tr>
            <% } %>

            <% arenroll.forEach(function(arenroll) { %>
             <tr>
              <td class="current">
                 <%= arenroll.arcurrent %>
              </td>
              <td class="arorop">
                <div><%= arenroll.arar %></div>
              </td>
              <td class="room">
               <div><%= arenroll.arroom %></div>
              </td>
              <td class="purpose">
               <div><%= arenroll.arpurpose %></div>
              </td>
              <td class="name">
               <a href="/kingofcsia@ar/<%= arenroll._id %>"><div><%= arenroll.arname %></div></a>
              </td>
              <td class="sort">
               <div><%= arenroll.arsort %></div>
              </td>
              <td class="sex">
               <div><%= arenroll.arsex %></div>
              </td>
              <td class="currentgrade">
               <div><%= arenroll.arcurrentgrade %></div>
              </td>
             </tr>
            <% }) %>

           </tbody>
          </table>

        </div>
        <!-- /.col-lg-12 -->
    </div>

</div>
<!-- /#page-wrapper -->

<% include ../parts/footer %>
